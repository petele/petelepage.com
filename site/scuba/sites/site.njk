---
pagination:
  data: diveSites.Data
  size: 1
  alias: diveSite
layout: layouts/post.njk
tags:
  - dive site
category: Scuba
permalink: "scuba/sites/{{ diveSite.Data.name | slugify }}.html"
eleventyComputed:
  title: "{{ diveSite.Data.name }}"
---

{% set site = diveSite.Data %}

{% if site.photo %}
<img src="data:image/jpeg;base64,{{site.photo}}" />
{% endif %}

<p>
{% if site.waterName %}
<b>Body of Water:</b> {{ site.waterName }}<br>
{% endif %}
{% if site.maxDepth %}
<b>Max Depth:</b> {{ site.maxDepth | round }}m<br>
{% endif %}
{% if site.altitude %}
<b>Altitude:</b> {{ site.altitude }}<br>
{% endif %}
{% if site.difficulty %}
<b>Difficulty:</b> {{ site.difficulty }}<br>
{% endif %}
{% if site.rating %}
<b>Rating:</b> {{ site.rating }}<br>
{% endif %}
</p>

{% if site.gpsLocation %}
<p>
  <b>GPS Coordinates</b><br>
  <b>Lat:</b> {{ site.gpsLocation.latitude | round(6) }}<br>
  <b>Lon:</b> {{ site.gpsLocation.longitude | round(6) }}<br>
  <a href="https://www.google.com/maps/search/?api=1&query={{ site.gpsLocation.latitude }},{{ site.gpsLocation.longitude }}" target="_blank">
    View on Google Maps
  </a>
</p>
{% endif %}

{% if site.comments %}
  <p>{{ site.comments }}</p>
{% endif %}

<p>
  <a id="dlJSON">Download DiveLog DiveExchange file</a>
</p>

<script>
  const elem = document.getElementById("dlJSON");
  const siteJSON = {
    "Version": 1,
    "FileType": "DiveLogExchange",
    "Program": "DiveLog",
    "Data": [{{ diveSite | stringify | safe }}],
  };
  const siteString = JSON.stringify(siteJSON);
  const blob = new Blob([siteString], {type: "application/json"});
  elem.href = URL.createObjectURL(blob);
  elem.download = "{{ site.name | slugify }}.json";
</script>
